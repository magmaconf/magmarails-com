#main-section
  .container
    .pure-g-r
      .pure-u-1-3
      .pure-u-1-3.center
        %img#thanks{src: "#{image_path 'thanks.svg'}"}
        %p{ class: "#{ I18n.locale.to_s } over" }= t('post_magma.show')
        %p{ class: "#{ I18n.locale.to_s } over over-small" }
          = t('post_magma.next_year')
          %span.separator.separator-big
          %span.separator

        = render 'partials/social_buttons'

        %p.organized-label
          = t('post_magma.organized_by')

        = link_to 'http://crowdint.com' do
          = image_tag 'crowdint.svg', class: 'crowdint-logo'

        .encore-button
          %a.btn-register.small{ href: '#' }
            =image_tag 'want-an-encore.svg'
          =image_tag 'shadow.png', class: 'shadow'
#newsletter
  %section
    .pure-g-r
      .pure-u-1-1.content
        %ul#scene
          %li.layer{ data: { depth: '0'} }= image_tag('banner.png', class: 'banner')
          %li.layer{ data: { depth: '-0.10'} }= image_tag('eyes.png', class: 'banner eyes')
        %p#stay-up.small.before= t('home.newsletter.stay_up_to_day')
        %p#subscribe.big.before= t('home.newsletter.subscribe')
        %p#thanks.big.after= t('home.newsletter.thanks')
        %p#keep.small.after= t('home.newsletter.keep')
        .form-container.before
          #message-box
            %button.close
              x
            %span
          %form#newsletter-form
            %fieldset
              .field.name
                %label{for: 'name'}= t('newsletter-form.fields.name')
                %span *
                %input{name: 'name', type: 'text'}
              .field
                %label{for: 'email'}= t('newsletter-form.fields.email')
                %span *
                %input{name: 'email', type: 'email'}
              %input.submit{type: 'submit', value: t('newsletter-form.fields.submit')}

= javascript_include_tag 'jquery.parallax'

:coffee
  $(document).ready ->
    $('#scene').parallax();
