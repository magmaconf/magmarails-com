    .pure-u-1-4
      .medium-sponsor.box
        %span.message YOUR LOGO COULD BE HERE!
    .pure-u-1-4
      .medium-sponsor.box
        %a{href: 'https://www.toptal.com', target: '_blank'}
          %img#toptal{src: "#{image_path 'toptal-logo.svg'}"}
    .pure-u-1-4
      .medium-sponsor.box
        %a{href: 'https://travis-ci.com', target: '_blank'}
          %img#travis-ci{src: "#{image_path 'travis-ci-logo.svg'}"}
    .pure-u-1-4
      .medium-sponsor.box
        %span OR HERE!
  #silver-sponsors.pure-g-r
    .pure-u-1-6
      .normal.box
        %a{href: 'https://www.engineyard.com/', target: '_blank'}
          %img#engine{src: "#{image_path 'engine.svg'}"}
    .pure-u-1-6
      .normal.box
        %a{href: 'https://www.honeybadger.io', target: '_blank'}
          %img#honey-badger{src: "#{image_path 'honey-badger.svg'}"}
    #btn-contact.pure-u-1-3
      .mail-button
        %img.shadow{src: "#{image_path 'shadow.png'}"}
        %a.btn-register
          %img{src: "#{image_path t('images.contact-sponsor')}"}
    .pure-u-1-6
      .normal.box
        %a{href: 'https://www.rackspace.com', target: '_blank'}
          %img#rackspace{src: "#{image_path 'rackspace-logo.svg'}"}
    .pure-u-1-6
      .normal.box
        %span OR HERE!
  #contact-form
    .pure-g-r
      .pure-u-1-1
        .title
          %span
            = t('contact-form.title')
          %a.cancel-button
            = t('contact-form.cancel-button')
            %img{src: "#{image_path 'close.png'}"}
    .pure-g-r
      .pure-u-1-1
        .form-container
          #message-box
            %button.close
              x
            %span
          %form#contact
            %fieldset
              .field
                %label{for: 'name'}= t('contact-form.fields.name')
                %span *
                %input{name: 'name', type: 'text'}
              .field
                %label{for: 'company'}= t('contact-form.fields.company')
                %span *
                %input{name: 'company', type: 'text'}
              .field
                %label{for: 'email'}= t('contact-form.fields.email')
                %span *
                %input{name: 'email', type: 'email'}
              %input.submit{type: 'submit', value: t('contact-form.fields.submit')}

