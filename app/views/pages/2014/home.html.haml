#main-section
  .container
    .pure-g-r
      .pure-u-1-3.left
        %img#reylero{ src: "#{ image_path 'reylero-running-nobg.png' }" }
      .pure-u-1-3.center
        %img#date{src: "#{image_path t('images.date')}"}
        %p= t('home.mexico_primer_dev_conf')
        .register
          = render 'pages/2014/partials/register_button', locals: {img: t('images.register') }
      .pure-u-1-3.right
        #info
          %p
            %span MAGMACONF!
            %br
            = t('home.one_of_the_most_important')
          %p= t('home.magma_welcome_dev')
        = render 'pages/2014/partials/social_buttons'
  #help-section
    .container
      .pure-g-r
        #here-to-help.pure-u-3-24
          %img.image.title{ src: "#{ image_path 'here-to-help-title.png' }" }
          %img.image{ src: "#{ image_path 'here-to-help-img.png' }" }
        #contact-us.pure-u-5-24
          .content
            %p.title
              WE ARE HERE TO HELP!
            %p.title
              DO YOU HAVE ANY QUESTIONS?
            %p.description
              Want to know more about MagmaConf transportation, housing and meals?
              Let us know; we're here to answer your questions!
            %a.link{ href:'mailto:info@magmaconf.com', target:'_blank' } CONTACT US
        #check-out-more.pure-u-8-24.sand-background
          .content
            %p.title
              EVERYTHING HAPPENS
            %p.title
              AT MAGMA VILLAGE.
            %p.description
              HAVE YOU BOOKED YOUR ROOM YET?
            %a.link{ href: '/2014/about-magma#magma-village' }CHECK OUT MORE
        %img#swimmer-image{ src: "#{ image_path 'swimmer.png' }" }
        #village-image.pure-u-8-24
          .content.sand-background
            %img{ src: "#{ image_path 'villlage-image.png' }" }
