#main-section
  .container
    #home-gallery.pure-g-r
      .js-hide.pure-u-1-3.center
      .pure-u-1-3.center
        %img#thanks{src: "#{image_path '2015/tickets-illustratio.svg'}"}
        %p{ class: "#{ I18n.locale.to_s } over over-small" }
          %span.separator.separator-big
          %span.hero-text.line1= 'OUR EARLY'
          %span.hero-text.line2= 'BIRD'
          %span.hero-text.line3= 'IS OPEN'
          %span.separator.separator-big
          %span.sub-content-text= 'CLOSES NEXT MAY 1ST 2015'

        = render 'pages/2015/partials/register_event_info'

      #photo-gallery.pure-u-2-3.cero-width
        #gallery-inner
          #home-info.gallery-box.large
            .inner-box
              .content-information
                %p.title MAGMACONF
                %p.description= t('home.one_of_the_most_important')
                %p.description= t('home.magma_welcome_dev')
        .spinner.js-spinner-is-expanded
          %a#load-more-items{ href: '#' }

#newsletter
  %section
    .pure-g-r
      .pure-u-1-1.content
        %ul#scene
          %li.layer{ data: { depth: '0'} }= image_tag('2015/n-2-01.png', class: 'banner')
        %p#stay-up.small.before= t('home.newsletter.stay_up_to_day')
        %p#subscribe.big.before= t('home.newsletter.subscribe')
        %p#thanks.big.after= t('home.newsletter.thanks')
        %p#keep.small.after= t('home.newsletter.keep')
        .form-container.before
          #message-box
            %button.close
              x
            %span
          %form#newsletter-form
            %fieldset
              .field.name
                %label{for: 'name'}= t('newsletter-form.fields.name')
                %span *
                %input{name: 'name', type: 'text'}
              .field
                %label{for: 'email'}= t('newsletter-form.fields.email')
                %span *
                %input{name: 'email', type: 'email'}
              %input.submit{type: 'submit', value: t('newsletter-form.fields.submit')}

:coffee
  $(document).ready ->
    $('body').addClass('hover')

    setTimeout ( ->
      $('#main-menu.index').addClass('hover')
    ), 2500

    gallery = new Gallery('#gallery-inner')
    $('.pages').addClass('cero-width')
    $('.white-background li').hide()
    gallery.start()
