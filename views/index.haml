#main-section
  .container
    .pure-g-r
      .pure-u-1-3.left
        %img#reylero{src: "#{image_path 'reylero-running-nobg.png'}"}
      .pure-u-1-3.center
        %img#date{src: "#{image_path t('images.date')}"}
        %p= t('home.mexico_primer_dev_conf')
        .register
          = partial :register_button, locals: {img: t('images.register') }
      .pure-u-1-3.right
        #info
          %p
            %span MAGMACONF!
            %br
            = t('home.one_of_the_most_important')
          %p= t('home.magma_welcome_dev')
        = partial :social_buttons
#newsletter
  %section
    .pure-g-r
      .pure-u-1-1.content
        %img.banner{src: "#{image_path 'banner-image.svg'}"}
        %p#stay-up.small.before= t('home.newsletter.stay_up_to_day')
        %p#subscribe.big.before= t('home.newsletter.subscribe')
        %p#thanks.big.after= t('home.newsletter.thanks')
        %p#keep.small.after= t('home.newsletter.keep')
        .form-container.before
          %form#contact
            %fieldset
              .field.name
                %label{for: 'name'}= t('newsletter-form.fields.name')
                %span *
                %input{name: 'name', type: 'text'}
              .field
                %label{for: 'email'}= t('newsletter-form.fields.email')
                %span *
                %input{name: 'email', type: 'email'}
              %input.submit{type: 'submit', value: t('newsletter-form.fields.submit')}
