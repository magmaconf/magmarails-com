%section#home.container
  .row
    .centered-three.comingsoon
      %img.magma-logo{src: "#{image_path 'magma.svg'}"}
      %img.june{src: "#{image_path t('home.for')}"}
      %p.span-no-bor= t('home.limit_ticket')
      %a.btn-cfp{href: "http://store.crowdint.com/products/category/magmaconf", target: "_blank"}
        %img{src: "#{image_path t('home.ticket')}"}
      %span.arrow-top
        %i.icon-arrow
      %p.span-time
      %p.stay= t('home.stay')
      .social
        %a.facebook{href: 'http://www.facebook.com/magmaconf', target: '_blank'}
          %i.icon-facebook
        %a.twitter{href: 'http://twitter.com/magmaconf', target: '_blank'}
          %i.icon-twitter
        %a.google{href: 'https://plus.google.com/+Magmaconf/posts', target: '_blank'}
          %i.icon-google
      %a.arrow{href: "#"}
        %i.icon-arrow

      .sponsoring
        .sponsor-links
          %a.cro{href: 'http://www.crowdint.com/', target: '_blank'}


%section#daily.container
  .separator
  #news
    .row.top-copy-right
      .twelve-columns.top
        %p.copy-right= t('daily.copy-right')
    .row
      .two-columns.logo
        %img{src: "#{image_path 'crowd.svg'}"}
      .eight-columns.title
        %img.tit{src: "#{image_path 'title-news.svg'}"}
        %img.tit-mob{src: "#{image_path 'dayli.svg'}"}
      .two-columns.mask
        %img{src: "#{image_path 'mask.svg'}"}
      .twelve-columns.line
    .row.stars
      .two-columns
        %span= t('daily.five')
        %span= t('daily.page')
      .eight-columns
        %img{src: "#{image_path 'stars.svg'}"}
      .two-columns.date
        %span= "#{@month} | #{@day} | #{@year}"
      .twelve-columns.line
      .twelve-columns.line-bold
    .row
      .six-columns
        %img.stb{src: "#{image_path 'stbn.jpg'}"}
        %h1= t('daily.manzanillo')
        %h3= t('daily.cooking')
        %h5= t('daily.happen')
        %h5.last-h5= t('daily.happen-for')
        %p.hov= t('daily.manzanillo-text.one')
        %p.hov= t('daily.manzanillo-text.two')
        %p.hov= t('daily.manzanillo-text.three')
        %p.hov.last= t('daily.manzanillo-text.four')
      .six-columns
        %h1.keynotes= t('daily.keynotes')
        %h2= t('daily.these')
        %h2.accepted= t('daily.accepted')
      .three-columns
        %img.des-san{src: "#{image_path 'desi.jpg'}"}
        %h4= t('daily.desi')
        %p= t('daily.desi-bio')
      .three-columns
        %img.des-san{src: "#{image_path 'sandi.jpg'}"}
        %h4= t('daily.sandi')
        %p= t('daily.sandi-bio')
      .six-columns.we
        %h2.yes-we= t('daily.yes-we')
        %h1.sponsr= t('daily.for')
        %p.hov.text-sponsor= t('daily.organize')
        %span.email= t('daily.email')
    .row.bottom-copy-right
      .twelve-columns.top
        %p.copy-right= t('daily.copy-right')
      .centered-two.mask-bottom
        %img{src: "#{image_path 'mask.svg'}"}
    .row.anti
      .three-columns
        %h3= t('home.policy.title')
      .nine-columns
        %p
          = t('home.policy.description')
          %a.open_popup{href: '#'}= t('home.policy.here')
      .twelve-columns.line

#popup
#policy.container
  = haml :popup
