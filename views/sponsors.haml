#sponsoring
  .pure-g-r.heading
    .pure-u-1-3
      %img.illustration{src: "#{image_path 'sponsors-illustration.png'}"}
    .pure-u-1-3
      .invitation
        %p.advice= t('sponsors.advice')
        %p.title= t('sponsors.title')
      .date
        %span.star
        %p.location= t('date')
        %span.star
    .pure-u-1-3
      %a.btn-register.small{href: 'http://magmaconf2014.eventbrite.com/', target: '_blank'}
        %img{src: "#{image_path t('images.register')}"}
  .pure-g-r#sponsors
    .pure-u-1-3
      .big-sponsor-box
        %a{href: 'http://www.crowdint.com', target: '_blank'}
          %img#crowdint{src: "#{image_path 'logo-crowd-sponsors.svg'}"}
    .pure-u-1-3.hide
      .big-sponsor-box
        %span YOUR LOGO COULD BE HERE!
    .pure-u-1-3
      .big-sponsor-box
        %a{href: 'https://github.com', target: '_blank'}
          %img#github{src: "#{image_path 'github-logo.png'}"}
  #silver-sponsors.pure-g-r
    .pure-u-1-6
      .normal-box
        %a{href: 'https://www.engineyard.com/', target: '_blank'}
          %img#engine{src: "#{image_path 'engine.svg'}"}
    .pure-u-1-6
      .normal-box
        %a{href: 'https://www.honeybadger.io', target: '_blank'}
          %img#honey-badger{src: "#{image_path 'honey-badger.svg'}"}
    #btn-contact.pure-u-1-3
      .mail-button
        %img.shadow{src: "#{image_path 'shadow.png'}"}
        %a.btn-register
          %img{src: "#{image_path t('images.contact-sponsor')}"}
    .pure-u-1-6
      .normal-box
        %span OR HERE!
    .pure-u-1-6
      .normal-box
        %span OR HERE!
  #contact-form
    .pure-g-r
      .pure-u-1-1
        .title
          %span
            = t('contact-form.title')
          %a.cancel-button
            = t('contact-form.cancel-button')
            %img{src: "#{image_path 'close.png'}"}
    .pure-g-r
      .pure-u-1-1
        .form-container
          #message-box
            %button.close
              x
            %span
          %form#contact
            %fieldset
              .field
                %label{for: 'name'}= t('contact-form.fields.name')
                %span *
                %input{name: 'name', type: 'text'}
              .field
                %label{for: 'company'}= t('contact-form.fields.company')
                %span *
                %input{name: 'company', type: 'text'}
              .field
                %label{for: 'email'}= t('contact-form.fields.email')
                %span *
                %input{name: 'email', type: 'email'}
              %input.submit{type: 'submit', value: t('contact-form.fields.submit')}

